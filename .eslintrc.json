{
  "env": {
    "jquery": true,
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": [ "src/**/*.js" ],
      "rules": {
        "indent": [
          "error",
          4
        ],
        "semi": [
          "error",
          "always"
        ],
        "quotes": [
          "error",
          "backtick"
        ]
      }
    }
  ]
}
